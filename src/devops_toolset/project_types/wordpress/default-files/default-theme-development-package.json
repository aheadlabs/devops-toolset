{
  "name": "{{theme-name}}",
  "version": "{{theme-version}}",
  "description": "{{theme-description}}",
  "main": "index.php",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "webpack serve",
    "build": "webpack --env environment=localhost",
    "build-production": "webpack --env environment=production",
    "watch": "concurrently \"webpack --watch\" \"browser-sync start --config browsersync.config.js\"",
    "i18n-pot": "wp i18n make-pot . src/languages/{{theme-name}}.pot",
    "i18n-compile": "msgfmt -o src/languages/en_US.mo src/languages/en_US.po && msgfmt -o src/languages/es_ES.mo src/languages/es_ES.po"
  },
  "keywords": "{{theme-tags}}",
  "author": {
    "name": "{{theme-author}}",
    "url": "{{theme-url}}"
  },
  "license": "GPLv3",
  "homepage": "{{production-environment-url}}",
  "devDependencies": {
    "bootstrap": "latest",
    "browser-sync": "latest",
    "concurrently": "latest",
    "copy-webpack-plugin": "latest",
    "css-loader": "latest",
    "filemanager-webpack-plugin": "^7.0.0",
    "mini-css-extract-plugin": "latest",
    "postcss": "latest",
    "postcss-loader": "latest",
    "postcss-preset-env": "latest",
    "sass": "latest",
    "sass-loader": "latest",
    "string-replace-loader": "latest",
    "ts-loader": "latest",
    "typescript": "latest",
    "webpack": "latest",
    "webpack-cli": "latest",
    "webpack-dev-server": "latest"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "latest"
  }
}
