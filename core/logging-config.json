{
  "logging": {
    "version": 1,
    "handlers": {
      "console": {
        "class": "logging.StreamHandler",
        "formatter": "default",
        "stream": "ext://sys.stdout"
      },
      "file": {
        "class": "logging.handlers.TimedRotatingFileHandler",
        "when": "midnight",
        "formatter": "default",
        "filename": "./logs/app.log",
        "backupCount": 10
      }
    },
    "formatters": {
      "brief": {
        "format": "%(message)s"
      },
      "default": {
        "format": "%(asctime)s %(levelname)-8s %(module)-15s %(message)s",
        "datefmt": "%Y-%m-%d %H:%M:%S"
      }
    },
    "root": {
      "handlers": [
        "console",
        "file"
      ],
      "level": "INFO"
    }
  }
}